<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity1"
    android:id="@+id/something">

    <TextView android:text="you have played 0 games \n 0 wins, 0 losses and 0 draws" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/game_tracker" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rock"
        android:id="@+id/button_rock"
        android:layout_below="@+id/game_tracker"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="60dp"
        android:onClick="rockButtonOnClick" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Make your choice....."
        android:id="@+id/computer"
        android:clickable="false"
        android:layout_marginBottom="86dp"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/button_paper"
        android:layout_alignEnd="@+id/button_paper" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="paper"
        android:id="@+id/button_paper"
        android:layout_alignTop="@+id/button_rock"
        android:layout_centerHorizontal="true"
        android:onClick="paperButtonOnClick" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="scissors"
        android:id="@+id/button_scissors"
        android:layout_alignTop="@+id/button_paper"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:onClick="scissorsButtonOnClick" />

</RelativeLayout>
